<body class = "log-in">
  <div class="log-in-form">
    <div class ="header">Log in</div>
    <br>

    <%= form_tag sessions_path do %>
      <div class="field">
        <%= label_tag :email %><br/>
        <%= text_field_tag :email, params[:email] %>
      </div>
      <br>
      <div class="field">
        <%= label_tag :password %><br/>
        <%= password_field_tag :password %>
      </div>
      <br>
      <div class="actions"><%= submit_tag "Log in" %></div>
    <% end %>
  </div>
</body>
